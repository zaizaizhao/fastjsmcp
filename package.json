{
  "name": "fastjsmcp",
  "version": "1.0.6",
  "description": "Create a fully functional Model Context Protocol (MCP) server with just two decorators, supporting JavaScript/TypeScript",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "bin": {
    "fastjsmcp": "dist/src/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "server": "tsx server.ts",
    "server:dev": "tsx watch server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "check": "tsc --noEmit",
    "clean": "rmdir /s /q dist 2>nul || echo \"dist directory not found\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@modelcontextprotocol/inspector": "^0.16.8",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.15.30",
    "@types/winston": "^2.4.4",
    "eslint": "^9.25.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "server",
    "typescript",
    "nodejs"
  ],
  "author": "zaizaizhao",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/zaizaizhao/fastjsmcp.git"
  },
  "bugs": {
    "url": "https://github.com/zaizaizhao/fastjsmcp/issues"
  },
  "homepage": "",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
  